{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 300,
    "background": "#b6bde0",
    "data": {
      "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries"
      }
    },
    "projection": {
      "type": "equirectangular",
      "center":[5,53],
      "scale":400
    },
    "layer":[
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "data/2016.csv"
              },
              "key": "Country",
              "fields": ["Happiness_Score"]
            }
          },
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "data/2016.csv"
              },
              "key": "Country",
              "fields": ["Region"]
            }
          },
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "data/2016.csv"
              },
              "key": "Country",
              "fields": ["Happiness_Rank"]
            }
          },
          { "calculate": "datum.Happiness_Score", "as": "Happiness Score" }
        ],
        "layer":[{
          "params": [{"name": "paintbrush", "select": "point"}],
          "mark": {
            "type": "geoshape"
          },
          "encoding": {
            "color": {
              "condition": {
                "field": "Happiness_Score",
                "type": "quantitative",
                "scale": { "type": "log" },
                "param": "paintbrush"
              },
              "value": "grey"
            },
            "opacity": {
              "condition": {
              "test": "datum['Region'] == 'Western Europe'",
              "value": 1
              },
              "value": 0
            },  
            "tooltip": [
              { "field": "properties.NAME", "type": "nominal", "title": "Country" },
              { "field": "Happiness_Score", "type": "quantitative" }
            ]
          }
        },
        {
          "data": {
            "url": "data/average-latitude-longitude-countries.csv"
          },
          "encoding": {
            "longitude": {
              "field": "Longitude",
              "type": "quantitative"
            },
            "latitude": {
              "field": "Latitude",
              "type": "quantitative"
            }
          },
          "layer": [{
            "mark": {
              "type": "text"
            },
            "encoding": {          
              "text": {"field": "Country", "type": "nominal"},
              "color": {"value": "black"},
              "opacity": {
                "condition": {
                "test": "datum['Region'] == 'Western Europe'",
                "value": 1
                },
                "value": 0
              }  
            }
          }]
        }
      ]
    }]
  }
  